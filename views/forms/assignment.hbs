<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 whiteBg">
            <form action="/api/new-assignment" method="POST">
                <div class="form-group">
                    <label for="name">Assignment Name</label>
                    <input type="text" class="form-control" name="name" placeholder="Assignment Name">
                </div>
                <div class="form-group">
                    <label for="due_date">Due Date</label>
                    <input type="text" class="form-control" name="due_date" id="due_date" placeholder="2017-05-12">
                </div>
                <input type="hidden" name="class_id" value="{{classId}}">
                <input type="hidden" name="coursework_id" value="{{courseworkId}}">
                <input type="hidden" name="sourceUrl" value="{{sourceUrl}}">
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
</div>