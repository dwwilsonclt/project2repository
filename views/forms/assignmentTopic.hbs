<div class="container">
    <form action="/api/new-asgmnt-topic" method="POST">
        <div class="form-group">
            <label for="name">Topic Name</label>
            <input type="text" class="form-control" name="name" placeholder="Topic Name">
        </div>
        <div class="form-group">
            <label for="weight">Topic Weight (%)</label>
            <input type="text" class="form-control" name="weight" placeholder="20">
        </div>
        <input type="hidden" name="class_id" value="{{classId}}">
        <input type="hidden" name="sourceUrl" value="{{sourceUrl}}">
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>