<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default whiteBg">
                <div class="panel-heading">
                    <h3 class="panel-title">{{this.className}} Grades</h3>
                </div>
                <div class="panel-body">
                    <table id="customTable" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                {{#each this.assignments as |assignment|}}
                                <th>{{assignment}}</th>
                                {{/each}}
                                <th>Final Grade</th>
                                <th>Letter Grade</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each this.students as |student|}}
                            <tr>
                                <td>{{student.name}}</td>
                                {{#each student.assignments as |assignment|}}
                                <td>{{assignment}}</td>
                                {{/each}}
                                <td>{{student.finalGrade}}</td>
                                <td>{{student.letterGrade}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
