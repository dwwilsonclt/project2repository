<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>{{this.className}} Grades</h2>
            <table id="customTable" class="table table-striped table-bordered nowrap table-hover" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        {{#each this.assignments as |assignment|}}
                            <th>{{assignment}}</th>
                        {{/each}}
                    </tr>
                </thead>
                <tbody>
                {{#each this.students as |student|}}
                    <tr>
                        <td>{{student.name}}</td>
                        {{#each student.assignments as |assignment|}}
                            <td>{{assignment}}</td>
                        {{/each}}
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>