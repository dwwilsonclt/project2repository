<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default whiteBg">
                <div class="panel-heading">
                    <h3 class="panel-title">{{this.className}} Students</h3>
                </div>
                <div class="panel-body">
                    <table id="customTable" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Classes</th>
                                <th>Class Level</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each this.students as |student|}}
                            <tr>
                                <td>{{student.name}}</td>
                                <td>{{student.classes}}</td>
                                <td>{{student.class_level}}</td>
                                <td>
                                    <a href="{{../url}}{{student.id}}">
                                        <button type="button" class="btn btn-default" data-id="{{student.id}}">View</button>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
