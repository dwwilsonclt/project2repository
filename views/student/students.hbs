<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>{{this.course.department_id}} {{this.course.course_number}}-{{this.section}} Students</h2>
            <table id="customTable" class="table table-striped table-bordered nowrap table-hover" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Class Level</th>
                </tr>
                </thead>
                <tbody>
                {{#each this.students as |student|}}
                    <tr>
                        <td>{{student.person.first_name}} {{student.person.last_name}}</td>
                        <td>{{student.class_level}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>