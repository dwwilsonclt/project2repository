<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><a href="/dashboard/admin/departments">Departments</a> > <a href="/dashboard/admin/departments/{{dept}}">{{dept}}</a> > <a href="#">Students</a> </h3>
                </div>
                <div class="panel-body">
                    <table id="customTable" class="table table-striped table-bordered table-hover" cellspacing="0">
                        <thead>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Email Address</th>
                    <th>Phone</th>
                    <th>Class Level</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip Code</th>
                </thead>
                <tbody>
                    {{#students}}
                    <tr>
                        <td>{{person.last_name}}</td>
                        <td>{{person.first_name}}</td>
                        <td><a href="mailto:{{email}}" target="_top">{{email}}</a></td>
                        <td>{{person.phone}}</td>
                        <td>{{class_level}}</td>
                        <td>{{person.address}}</td>
                        <td>{{person.city}}</td>
                        <td>{{person.state}}</td>
                        <td>{{person.zip_code}}</td>
                    </tr>
                    {{/students}}
                </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

