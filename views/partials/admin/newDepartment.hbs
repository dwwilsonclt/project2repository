<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 formBg">
             <form action="/api/new-department" method="POST" class="form-horizontal">
                <fieldset>
                    <!-- Form Name -->
                    <legend>Add a new department</legend>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="deptId">Department ID</label>
                        <div class="col-md-8">
                            <input id="deptId" name="id" type="text" placeholder="" class="form-control input-md">
                        </div>
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="textinput">Department Name</label>
                        <div class="col-md-8">
                            <input id="deptName" name="name" type="text" placeholder="" class="form-control input-md">
                        </div>
                    </div>
                    <!-- Button -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="singlebutton"></label>
                        <div class="col-md-4">
                        <input type="hidden" name="sourceUrl" value="{{sourceUrl}}">
                            <button type="submit" id="singlebutton" name="singlebutton" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
