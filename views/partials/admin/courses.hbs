<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><a href="/dashboard/admin/departments">Departments</a> > <a href="/dashboard/admin/departments/{{dept}}">{{dept}}</a> > <a href="#">Courses</a> </h3>
                </div>
                <div class="panel-body">
                    <table id="customTable" class="table table-striped table-bordered nowrap table-hover" cellspacing="0" width="100%">
                        <thead>
                            <th>Course Number</th>
                            <th>Course Name</th>
                        </thead>
                        <tbody>
                            {{#courses}}
                            <tr>
                                <td>{{course_number}}</td>
                                <td>{{name}}</td>
                            </tr>
                            {{/courses}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
