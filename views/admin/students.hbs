<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default whiteBg">
                <div class="panel-heading">
                    <h3 class="panel-title">Students</h3>
                </div>
                <div class="panel-body">
                    <table id="customTable" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <th>Department</th>
                            <th>Last Name</th>
                            <th>First Name</th>
                            <th>Email Address</th>
                            <th>Classes</th>
                            <th></th>
                        </thead>
                        <tbody>
                        {{#students}}
                            <tr>
                                <td>{{department}}</td>
                                <td>{{last_name}}</td>
                                <td>{{first_name}}</td>
                                <td><a href="mailto:{{email}}" target="_top">{{email}}</a></td>
                                <td>{{classes}}</td>
                                <td>
                                    <a href="{{../url}}/{{id}}">
                                        <button type="button" class="btn btn-default" data-id="{{id}}">View</button>
                                    </a>
                                </td>
                            </tr>
                        {{/students}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>